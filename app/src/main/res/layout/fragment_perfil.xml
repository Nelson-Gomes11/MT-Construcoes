<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.perfil.PerfilFragment"
    android:background="@color/brown">

    <ImageView
        android:id="@+id/perfil"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nome_perfil"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="160dp"
        android:fontFamily="@font/inter_black"
        android:text="PERFIL"
        android:textColor="#000000"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfil"/>

    <EditText
        android:id="@+id/nomedoperfil"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="280dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Seu Nome"
        android:padding="13dp"
        android:textColorHint="#000000"
        app:layout_constraintTop_toBottomOf="@+id/perfil"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/perfil_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="350dp"
        android:drawableStart="@drawable/ic_contact"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Seu Email"
        android:padding="13dp"
        android:textColorHint="#000000"
        app:layout_constraintTop_toBottomOf="@+id/nomedoperfil"
        app:layout_constraintWidth_percent=".8" />
    <Button
        android:id="@+id/bt_deslogar"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="420dp"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:text="Deslogar"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="13dp" />

</FrameLayout>
